<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textStyle="bold"
            android:textColor="#3F75FF"
            android:textSize="30sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="편안한 캠퍼스에 오신걸 환영합니다."
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:textSize="13sp"
            android:textColor="#9CC4FF"
            android:textStyle="bold"
            />

    </LinearLayout>
    <FrameLayout
        android:id="@+id/authframelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="170dp"
        android:background="@drawable/authbackgrounbox"
        />


    <TextView
        android:id="@+id/logintitle"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="편안한 캠퍼스"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/authframelayout"
        app:layout_constraintBottom_toTopOf="@+id/signupnameEditText"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="로그인을 진행해 주세요"
        android:textSize="10sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logintitle"
        />


    <TextView
        android:id="@+id/signupnameEditText"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:hint="Name"
        android:textColorHint="@color/white_1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingStart="35dp"
        android:textColor="@color/white_1"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="420dp"
        android:background="@drawable/authbox_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/signupemailEditText"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:hint="Email"
        android:textColorHint="@color/white_1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingStart="35dp"
        android:textColor="@color/white_1"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/authbox_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signupnameEditText"
        />

    <TextView
        android:id="@+id/signuppasswordEditText"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:hint="Password"
        android:textColorHint="@color/white_1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingStart="35dp"
        android:textColor="@color/white_1"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/authbox_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signupemailEditText"
        />


    <TextView
        android:id="@+id/signupButton"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:text="@string/signUp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#0270FE"
        android:background="@drawable/authbox"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signuppasswordEditText"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>