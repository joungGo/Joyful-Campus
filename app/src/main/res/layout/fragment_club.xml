<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FB">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F7FB">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/clubToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="편안한 Campus" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <TextView
            android:id="@+id/categoryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:paddingStart="15dp"
            android:text="카테고리"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <HorizontalScrollView
            android:id="@+id/categoryScrollView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="22.42dp"
            android:layout_marginEnd="16dp"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/categoryText">

            <LinearLayout
                android:id="@+id/categoryButtonsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- 카테고리 버튼들 -->
                <LinearLayout
                    android:id="@+id/categoryButtonContainer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/categoryIconSports"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/ic_baseline_photo_camera_24"
                        android:scaleType="fitCenter"
                        android:src="@drawable/app_logo" />

                    <TextView
                        android:id="@+id/categorySports"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="스포츠"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- 카테고리 버튼들 -->
                <LinearLayout
                    android:id="@+id/categoryButtonContainer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/categoryIconMedical"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/ic_baseline_photo_camera_24"
                        android:scaleType="fitCenter"
                        android:src="@drawable/app_logo" />

                    <TextView
                        android:id="@+id/categoryMedical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="의료"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                </LinearLayout>


                <!-- 다른 카테고리 버튼들 추가 --> <!-- 카테고리 버튼들 -->
                <LinearLayout
                    android:id="@+id/categoryButtonContainer3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/categoryIconVolunteer"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/ic_baseline_photo_camera_24"
                        android:scaleType="fitCenter"
                        android:src="@drawable/app_logo" />

                    <TextView
                        android:id="@+id/categoryNameVolunteer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="봉사"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                </LinearLayout>


                <!-- 다른 카테고리 버튼들 추가 --> <!-- 카테고리 버튼들 -->
                <LinearLayout
                    android:id="@+id/categoryButtonContainer4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/categoryIconCoding"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/ic_baseline_photo_camera_24"
                        android:scaleType="fitCenter"
                        android:src="@drawable/app_logo" />

                    <TextView
                        android:id="@+id/categoryCoding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="코딩"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/categoryButtonContainer5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/categoryIconStartup"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/ic_baseline_photo_camera_24"
                        android:scaleType="fitCenter"
                        android:src="@drawable/app_logo" />

                    <TextView
                        android:id="@+id/categoryStartup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="창업"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/categoryButtonContainer6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/categoryIconReligion"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/ic_baseline_photo_camera_24"
                        android:scaleType="fitCenter"
                        android:src="@drawable/app_logo" />

                    <TextView
                        android:id="@+id/categoryReligion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="종교"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/categoryButtonContainer7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/categoryIconArt"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/ic_baseline_photo_camera_24"
                        android:scaleType="fitCenter"
                        android:src="@drawable/app_logo" />

                    <TextView
                        android:id="@+id/categoryArt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="예술"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/categoryButtonContainer8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/categoryIconEtc"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/ic_baseline_photo_camera_24"
                        android:scaleType="fitCenter"
                        android:src="@drawable/app_logo" />

                    <TextView
                        android:id="@+id/categoryEtc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="기타"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <RelativeLayout
            android:id="@+id/middleTextArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintTop_toBottomOf="@id/categoryScrollView">

            <TextView
                android:id="@+id/clubTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동아리" />

            <TextView
                android:id="@+id/moreTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/clubTextView"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:text="+모두보기" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/clubRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/middleTextArea" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_baseline_add_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/black" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
