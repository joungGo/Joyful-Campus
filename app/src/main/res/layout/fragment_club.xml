<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <HorizontalScrollView
        android:id="@+id/categoryScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/categoryButtonsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 카테고리 버튼들 -->
            <LinearLayout
                android:id="@+id/categoryButtonContainer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/categoryIconSports"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/app_logo"
                    android:background="@drawable/ic_baseline_photo_camera_24"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:id="@+id/categorySports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="스포츠"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>

            </LinearLayout>

            <!-- 카테고리 버튼들 -->
            <LinearLayout
                android:id="@+id/categoryButtonContainer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/categoryIconMedical"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/app_logo"
                    android:background="@drawable/ic_baseline_photo_camera_24"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:id="@+id/categoryMedical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="의료"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>

            </LinearLayout>


            <!-- 다른 카테고리 버튼들 추가 --> <!-- 카테고리 버튼들 -->
            <LinearLayout
                android:id="@+id/categoryButtonContainer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/categoryIconVolunteer"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/app_logo"
                    android:background="@drawable/ic_baseline_photo_camera_24"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:id="@+id/categoryNameVolunteer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="봉사"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>

            </LinearLayout>


            <!-- 다른 카테고리 버튼들 추가 --> <!-- 카테고리 버튼들 -->
            <LinearLayout
                android:id="@+id/categoryButtonContainer4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/categoryIconCoding"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/app_logo"
                    android:background="@drawable/ic_baseline_photo_camera_24"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:id="@+id/categoryCoding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="코딩"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>

            </LinearLayout>


            <!-- 다른 카테고리 버튼들 추가 --> <!-- 카테고리 버튼들 -->
            <LinearLayout
                android:id="@+id/categoryButtonContainer5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/categoryIconStartup"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/app_logo"
                    android:background="@drawable/ic_baseline_photo_camera_24"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:id="@+id/categoryStartup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="창업"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>

            </LinearLayout>


            <!-- 다른 카테고리 버튼들 추가 --> <!-- 카테고리 버튼들 -->
            <LinearLayout
                android:id="@+id/categoryButtonContainer6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/categoryIconReligion"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/app_logo"
                    android:background="@drawable/ic_baseline_photo_camera_24"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:id="@+id/categoryReligion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="종교"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>

            </LinearLayout>


            <!-- 다른 카테고리 버튼들 추가 --> <!-- 카테고리 버튼들 -->
            <LinearLayout
                android:id="@+id/categoryButtonContainer7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/categoryIconArt"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/app_logo"
                    android:background="@drawable/ic_baseline_photo_camera_24"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:id="@+id/categoryArt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예술"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>

            </LinearLayout>


            <!-- 다른 카테고리 버튼들 추가 --> <!-- 카테고리 버튼들 -->
            <LinearLayout
                android:id="@+id/categoryButtonContainer8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:id="@+id/categoryIconEtc"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/app_logo"
                    android:background="@drawable/ic_baseline_photo_camera_24"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:id="@+id/categoryEtc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기타"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"/>

            </LinearLayout>


            <!-- 다른 카테고리 버튼들 추가 -->

            <!-- 다른 카테고리 버튼들 추가 -->

        </LinearLayout>
    </HorizontalScrollView>

    <!-- 동아리 목록 RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/clubRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/categoryScrollView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scrollbars="vertical" />





</androidx.constraintlayout.widget.ConstraintLayout>