<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Button
        android:id="@+id/authstartbutton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Join a Campus"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="380dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/authsignupbutton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="@id/authstartbutton"
        app:layout_constraintEnd_toStartOf="@id/authloginoutbutton"
        app:layout_constraintTop_toBottomOf="@+id/authstartbutton"
        />
    <Button
        android:id="@+id/authloginoutbutton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/authsignupbutton"
        app:layout_constraintTop_toBottomOf="@+id/authstartbutton"
        android:text="Login"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="@id/authstartbutton"
        />



</androidx.constraintlayout.widget.ConstraintLayout>